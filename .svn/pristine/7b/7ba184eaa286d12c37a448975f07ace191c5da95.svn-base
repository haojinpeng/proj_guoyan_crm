<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8"/>
    <title>项目工时管理</title>
    <link rel="stylesheet" type="text/css" href="resources/layui/css/layui.css"/>
</head>
<style type="text/css">
    /**自定义滚动条样式 */
    ::-webkit-scrollbar {
        width: 4px;
        height: 4px
    }

    ::-webkit-scrollbar-track {
        background-color: transparent;
        -webkit-border-radius: 2em;
        -moz-border-radius: 2em;
        border-radius: 2em;
    }

    ::-webkit-scrollbar-thumb {
        background-color: #9c9da0;
        -webkit-border-radius: 2em;
        -moz-border-radius: 2em;
        border-radius: 2em
    }
</style>

<body>


<!-- 数据表格开始 -->
<table class="layui-hide" id="userTable" lay-filter="userTable"></table>
<div style="display: none;" id="userToolBar">

    <form action="" class="layui-form" method="post">
        <form class="layui-form " action="" lay-filter="dataFrm" id="dataFrm">
            <div class="layui-form-item" style="margin-top: 10px">
                <div class="layui-inline" style="margin-left: -10px;">
                    <label class="layui-form-label" style="width: 100px;">公司编号:</label>
                    <div class="layui-input-inline">
                        <input type="text" name="company_id" id="company_id" autocomplete="off" placeholder="请输入编号"
                               class="layui-input">
                    </div>
                </div>
                    <div class="layui-inline" style="margin-left: -10px;">
                        <label class="layui-form-label" style="width: 100px">维护类型:</label>
                        <div class="layui-input-inline">
                            <select name="company_type" id="company_type" lay-verify="required" lay-filter="selectfilter">
                                <option value="">请选择</option>
                                <option value="形象维护">形象维护</option>
                                <option value="环境维护">环境维护</option>
                                <option value="财产维护">财产维护</option>
                            </select>
                        </div>
                    </div>


                <button type="button" class="layui-btn layui-btn-normal layui-btn-sm layui-icon layui-icon-search" lay-event="sel">查询</button>

                <button type="reset" class="layui-btn layui-btn-primary layui-btn-sm ">重置</button>
                <button class="layui-btn layui-btn-sm" type="button" lay-event="add">添加</button>


            </div>

        </form>
    </form>
</div>
<div id="userBar" style="display: none;">

    <a class="layui-btn layui-btn-xs" lay-event="edit">修改</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>

</div>
<!-- 数据表格结束 -->


<!-- 添加的弹出层开始 -->
<div style="display: none;padding: 20px" id="addDiv">
    <form class="layui-form " action="" lay-filter="dataFrm" id="dataFrm">
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">公司编号:</label>
                <div class="layui-input-inline">
                    <input type="text" name="company_id" id="company_id" autocomplete="off" placeholder="自动生成编号" class="layui-input">
                </div>
            </div>
        </div>
        <div class="layui-form-item">

            <div class="layui-inline">
                <label class="layui-form-label">维护类型:</label>
                <div class="layui-input-inline" >
                    <select name="company_type" id="company_type" >
                        <option value="">请选择</option>
                        <option value="形象维护">形象维护</option>
                        <option value="环境维护">环境维护</option>
                        <option value="财产维护">财产维护</option>
                    </select>
                </div>
            </div>

        </div>

        <div class="layui-form-item" style="text-align: center;">
            <div class="layui-input-block">
                <button type="button" class="layui-btn layui-btn-normal layui-btn-sm layui-icon layui-icon-release"
                        lay-filter="doSubmit" lay-submit="">添加
                </button>
                <button type="reset" class="layui-btn layui-btn-warm layui-btn-sm layui-icon layui-icon-refresh">重置
                </button>
            </div>
        </div>
    </form>

</div>
<!-- 添加的弹出层结束 -->

<!-- 修改的弹出层开始 -->
<div style="display: none;padding: 20px" id="updateDiv">
    <form class="layui-form " action="" lay-filter="dataFrm" id="dataFrm">
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">项目编号:</label>
                <div class="layui-input-inline">
                    <input type="text" name="company_id" id="company_id" lay-verify="required" autocomplete="off" placeholder="" readonly="readonly"
                           class="layui-input" >
                </div>
            </div>


        </div>

        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">公司维护:</label>
                <div class="layui-input-inline">
                    <select name="company_type" id="company_type">
                        <option value="">请选择</option>
                        <option value="形象维护">形象维护</option>
                        <option value="环境维护">环境维护</option>
                        <option value="财产维护">财产维护</option>
                    </select>
                </div>
            </div>

        </div>


        <div class="layui-form-item" style="text-align: center;">
            <div class="layui-input-block">
                <button type="button" class="layui-btn layui-btn-normal layui-btn-sm layui-icon layui-icon-release"
                        lay-filter="doSubmit" lay-submit="">提交可修改项
                </button>
                <button type="button" class="layui-btn layui-btn-warm layui-btn-sm layui-icon layui-icon-refresh" lay-filter="doSubmit1" lay-submit="">取消
                </button>
            </div>
        </div>
    </form>

</div>
<!-- 修改的弹出层结束 -->


</body>

<script src="resources/layui/layui.js" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript">
    layui.use(['jquery', 'slider', 'element', 'carousel', 'rate', 'table', 'layer', 'laydate', 'form'], function () {

        var $ = layui.jquery,
            slider = layui.slider,
            element = layui.element,
            form = layui.form,
            table = layui.table,
            laydate = layui.laydate,
            rate = layui.rate,
            layer = layui.layer,
            carousel = layui.carousel;

        //渲染数据表格
        var tableIns = table.render({
            elem: '#userTable' //渲染的目标对象
            ,
            url: '/company.do?opt=queryAll' //数据接口
            ,
            title: '用户数据表' //数据导出来的标题
            ,
            toolbar: "#userToolBar" //表格的工具条
            ,
            height: '400',
            cellMinWidth: 100 //设置列的最小默认宽度
            ,
            done: function (res, curr, count) {

            },
            page: true //是否启用分页
            ,
            cols: [
                [ //列表数据
                    {
                        type: 'checkbox',
                        fixed: 'left'
                    }, {
                    field: 'company_id',
                    title: '公司编号',
                    sort: true,

                    align: 'center'
                }, {
                    field: 'company_type',
                    title: '维护类型',
                    sort: true,
                    align: 'center'
                }, {
                    fixed: 'right',
                    title: '操作',
                    toolbar: '#userBar',

                    align: 'center'
                }
                ]
            ], page: {layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']}
            , id: 'testReload'
        });

//监听下拉框
        var company_type;
        form.on('select(selectfilter)', function (data) {
            company_type = data.value;
        });
        //模糊查询
        function selDiv() {

            var company_id = $("#company_id").val();

            //只重载数据
            table.reload('testReload', {
                where: { //设定异步数据接口的额外参数，任意设
                    company_id:company_id,
                    company_type:company_type
                }
                , page: {
                    curr: 1 //重新从第 1 页开始
                }
            });

        };
        /**
         * 监听头工具栏事件
         * */
        table.on('toolbar(userTable)', function (obj) {

            switch(obj.event){
                case 'sel':
                    selDiv();
                    break;
                case 'add':
                    openAddUser();
                    break;
            }
        });
        //监听行工具事件
        table.on('tool(userTable)', function (obj) {
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            if (layEvent === 'del') { //删除
                layer.confirm('是否删除？', function (index) {
                    obj.del();
                    delOne(obj.data.company_id);
                    layer.close(index);
                    layer.msg("删除成功！");
                    //向服务端发送删除指令
                });
            } else if (layEvent === 'edit') { //编辑
                openUpdateUser(data);
            }
        });
        /**
         * 删除单个
         * */
        function delOne(company_id) {
            $.post("/company.do", {opt: "del", company_id: company_id},
                function (flag) {

                    if (flag == 1) {
                        layer.msg("删除成功", {icon: 6});
                        location.reload();
                        layer.close(index);

                    } else {
                        layer.msg("删除失败", {icon: 5});
                        location.reload();
                    }
                });
        }


        //打开添加页面
        function openAddUser() {
            layer.open({
                type: 1,
                title: ' ',
                content: $("#addDiv"),
                area: ['400px', '270px'],
                success: function (index) {
                    //清空表单数据
                    $("#dataFrm")[0].reset();
                    url = "/company.do?opt=add";
                }
            });
        };
        //打开修改页面
        function openUpdateUser(data) {
           layer.open({
                type: 1,
                title: ' ',
                content: $("#updateDiv"),
                area: ['400px', '250px'],
                success: function (index) {

                    form.val("dataFrm", data);
                    url = "/company.do?opt=upd";
                }
            });
        }
        /**
         * 监听提交
         * */

        form.on('submit(doSubmit)', function (data) {
            alert(JSON.stringify(data.field));
            $.get(
                url,
                data.field,
                function (flag) {
                    if (flag == 1) {
                        alert("操作成功!");
                        window.location.href = "公司维护.html";
                    } else {
                        alert("操作失败!");
                        window.location.href = "公司维护.html";
                    }
                }, "json");

            return false;
        });

        form.on('submit(doSubmit1)', function (data) {

            window.location.href = "公司维护.html";


        });

    });
</script>

</html>