<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8" />
		<title>日报管理</title>
		<link rel="stylesheet" type="text/css" href="resources/layui/css/layui.css" />

		<link rel="stylesheet" type="text/css" href="resources/layui_ext/dtree/dtree.css" />
		<style type="text/css">
			 /**自定义滚动条样式 */
    ::-webkit-scrollbar {width: 4px;height: 4px}
    ::-webkit-scrollbar-track {background-color: transparent;-webkit-border-radius: 2em;-moz-border-radius: 2em;border-radius: 2em;}
    ::-webkit-scrollbar-thumb {background-color: #9c9da0;-webkit-border-radius: 2em;-moz-border-radius: 2em;border-radius: 2em}
		</style>
	</head>

	<body>

	

			<!-- 数据表格开始 -->
			<table class="layui-hide" id="userTable" lay-filter="userTable"></table>
<div style="display: none;" id="userToolBar" >
		<form action="" class="layui-form" method="post">
			<form class="layui-form " action="" lay-filter="dataFrm" id="dataFrm">
				<div class="layui-form-item">
					<div class="layui-inline" >
						<label class="layui-form-label" style="width: 100px;">项目名称:</label>
						<div class="layui-input-inline">
							<input type="text" name="name" autocomplete="off" placeholder="请输入关键字" class="layui-input">
						</div>
					</div>
					
					<div class="layui-inline">
						<label class="layui-form-label" style="width: 100px;">日期范围</label>
						<div class="layui-input-inline">
							<input type="text" class="layui-input" id="test6" placeholder=" - ">
						</div>
					</div>
					<button type="button" class="layui-btn layui-btn-normal layui-btn-sm layui-icon layui-icon-search" id="doSearch">查询</button>

				</div>

			</form>
	</div>
			<div id="userBar" style="display: none;">

				<a class="layui-btn layui-btn-xs" lay-event="detail">延期详情</a>
				<a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="exam">延期审批</a>
			</div>
			<!-- 数据表格结束 -->

			<!-- 延期详情弹出层开始 -->
			<div style="display: none;padding: 20px" id="detailDiv">
				<form class="layui-form " action="" lay-filter="dataFrm" id="dataFrm">

					<div class="layui-form-item">
						<div class="layui-inline">
							<label class="layui-form-label">延期事由:</label>
							<div class="layui-input-inline">
								<textarea type="text"  name="description"  placeholder="不可修改项"  class="layui-textarea" readonly="readonly"></textarea>
							</div>
						</div>

					</div>
					<div class="layui-form-item">
						<div class="layui-inline">
							<label class="layui-form-label">审批意见:</label>
							<div class="layui-input-inline">
								<textarea type="text"  name="description"  placeholder="不可修改项" readonly="readonly"  class="layui-textarea"></textarea>
							</div>
						</div>

					</div>
					<div class="layui-form-item" style="text-align: center;">
						<div class="layui-input-block">
							<!--<button type="button" class="layui-btn layui-btn-normal layui-btn-sm layui-icon layui-icon-release" lay-filter="doSubmit" lay-submit="">提交</button>-->
							<button type="reset" class="layui-btn layui-btn-warm layui-btn-sm layui-icon layui-icon-refresh">确定</button>
						</div>
					</div>
				</form>

			</div>
			<!-- 延期详情弹出层结束 -->

			<!-- 延期审批弹出层开始 -->
			<div style="display: none;padding: 20px" id="examDiv">
				<form class="layui-form " action="" lay-filter="dataFrm" id="dataFrm">
					<div class="layui-form-item">

						<div class="layui-inline">
							<label class="layui-form-label">延期审批结果:</label>
							<div class="layui-input-inline" style="width: 100px;">
								
									<select name="" lay-filter="" id="" >
										<option value="0">请选择</option>
										<option value="1">审核通过</option>
										<option value="2">审核不通过</option>										
									</select>
								
							</div>

							<div class="layui-inline">
								<label class="layui-form-label">审批备注:</label>
								<div class="layui-input-inline" >
								<textarea type="text"  name="status"  placeholder="添加审批备注"  class="layui-textarea"></textarea>
								</div>
							</div>

						</div>
						
						<br><br>
						<div class="layui-form-item" style="text-align: left;margin-left: 50px;">
							<div class="layui-input-block" >
								<button type="reset"  class="layui-btn layui-btn-warm layui-btn-sm layui-icon layui-icon-refresh">确定</button>
							</div>
						</div>
				</form>

				</div>
				<!-- 延期审批弹出层结束 -->

	</body>
	<script src="resources/layui/layui.js" type="text/javascript" charset="utf-8"></script>
	<script type="text/javascript">
		layui.use(['jquery', 'slider', 'element', 'carousel', 'rate', 'table', 'layer', 'laydate', 'form'], function() {

			var $ = layui.jquery,
				slider = layui.slider,
				element = layui.element,
				form = layui.form,
				table = layui.table,
				laydate = layui.laydate,
				rate = layui.rate,
				layer = layui.layer,
				carousel = layui.carousel;

			//日期范围
			laydate.render({
				elem: '#test6',
				range: true
			});

			//渲染数据表格
			var tableIns = table.render({
				elem: '#userTable' //渲染的目标对象
					,
				url: 'js/users2.json' //数据接口
					,
				title: '用户数据表' //数据导出来的标题
					,
				toolbar: "#userToolBar" //表格的工具条
					,
				height: '400',
				cellMinWidth: 100 //设置列的最小默认宽度
					,
				done: function(res, curr, count) {

				},
				page: true //是否启用分页
					,
				cols: [
					[ //列表数据
						{
							type: 'checkbox',
							fixed: 'left'
						}, {
							field: 'id',
							title: 'ID',
							sort: true,
							width: 80,
							align: 'center'
						}, {
							field: 'name',
							title: '项目名称',
							sort: true,
							align: 'center'
						}, {
							field: 'name1',
							title: '任务名称',
							sort: true,
							align: 'center'
						}, {
							field: 'createtime',
							title: '添加时间',
							sort: true,
							align: 'center'
						}, {
							field: 'reviewer_id',
							title: '当前执行人',
							sort: true,
							align: 'center'
						}, {
							field: 'status',
							title: '审核状态',
							sort: true,
							width: 80,
							align: 'center'
						}, {
							fixed: 'right',
							title: '操作',
							toolbar: '#userBar',
							width: 280,
							align: 'center'
						}
					]
				]
			});

			//监听行工具事件
			table.on('tool(userTable)', function(obj) {
				var data = obj.data; //获得当前行数据
				var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
				if(layEvent === 'detail') { //查看日志详情
					openDetailUser(data);
				} else if(layEvent === 'exam') { //延期审批
					openExamUser(data);
				}
			});

			
			var url;
			var mainIndex;

			//打开日报详情页面
			function openDetailUser(data) {
				mainIndex = layer.open({
					type: 1,
					title: '查看延期详细',
					content: $("#detailDiv"),
					area: ['400px', '350px'],
					success: function(index) {
						//清空表单数据 
						$("#dataFrm")[0].reset();
					}
				});
			};
			//打开日报审批页面
			function openExamUser(data) {
				mainIndex = layer.open({
					type: 1,
					title: '延期审批',
					content: $("#examDiv"),
					area: ['420px', '310px'],
					success: function(index) {
						//清空表单数据 
						$("#dataFrm")[0].reset();
					}
				});
			}

		});
	</script>

</html>