	<script src="resources/layui/layui.js" type="text/javascript" charset="utf-8"></script>
	<script>
		layui.use(['jquery', 'slider', 'element', 'carousel', 'rate', 'table', 'layer', 'laydate', 'form', 'layedit'],
			function() {
		
				var $ = layui.jquery,
					slider = layui.slider,
					element = layui.element,
					form = layui.form,
					table = layui.table,
					laydate = layui.laydate,
					rate = layui.rate,
					layer = layui.layer,
					carousel = layui.carousel,
					layedit = layui.layedit;
				//创建一个编辑器
				var editIndex = layedit.build('LAY_demo_editor');
		
				$(".btnclick0").click(function() {
					openUpdateUser();
				})
		
				var url;
				var mainIndex;
		
				//打开修改页面
				function openUpdateUser() {
					mainIndex = layer.open({
						type: 1,
						title: '添加文章',
						content: $("#saveOrUpdateDiv"),
						area: ['800px', '400px']
					});
				}
		
				

			//触发事件
			var active = {
				tabAdd: function() {
					
					//新增一个Tab项
					element.tabAdd('demo', {
						title: '新选项'  //用于演示
							,
						content: '内容' ,
						id: new Date().getTime() //实际使用一般是规定好的id，这里以时间戳模拟下
					})
				}

			};
			$('.site-demo-active').on('click', function() {
				var othis = $(this),
					type = othis.data('type');
				active[type] ? active[type].call(this, othis) : '';

			});

			//Hash地址的定位
			var layid = location.hash.replace(/^#test=/, '');
			element.tabChange('test', layid);

			element.on('tab(test)', function(elem) {
				location.hash = 'test=' + $(this).attr('lay-id');
			});
			//弹出层开始
			
			$('#hclick1').on('click', function() {		
				window.location.href="myH1.html";
			});
			$('#hclick2').on('click', function() {
				window.location.href="myH2.html";
			});
			$('#hclick3').on('click', function() {
				window.location.href="myH3.html";
			});
			//弹出层结束
			// 置顶文章开始
			$('#icon1').on('click', function() {
				$(this).css("color", "red");
				$(this).css("font-size", "20px");
				var sp1=document.getElementById("sp1");
				sp1.innerHTML=sp1.innerHTML*1+1;
				
			
			});
			$('#icon2').on('click', function() {
				$(this).css("color", "red");
				$(this).css("font-size", "20px");
				
				var sp2=document.getElementById("sp2");
				sp2.innerHTML=sp2.innerHTML*1+1;
		
			
			});
			$('#icon3').on('click', function() {
				$(this).css("color", "red");
				$(this).css("font-size", "20px");
				
				var sp3=document.getElementById("sp3");
				sp3.innerHTML=sp3.innerHTML*1+1;
			
			});
			$('.btnclick11').on('click', function() {
				$('.btnclick1').css("top", "100px");
				$('.btnclick2').css("top", "300px");
				$('.btnclick3').css("top", "500px");
			
			});
		
			$('.btnclick22').on('click', function() {
