package com.it.controller;

import com.it.bean.User;
import com.it.dao.IUdao;
import com.it.services.IUserServices;
import com.it.services.UserServicesImpl;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.io.PrintWriter;

@WebServlet(name = "UserLoginServlet",urlPatterns = {"/login.do"})
public class UserLoginServlet extends HttpServlet {
    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        //处理乱码
        response.setContentType("application/json; charset=utf-8");
//        response.setCharacterEncoding("utf-8");
        PrintWriter out = response.getWriter();
        //获取页面上的值
        String opt=request.getParameter("opt");
        String login_name = request.getParameter("login_name");
        String password = request.getParameter("password");


        System.out.println(">>>>"+login_name);


      //生成对象
        User user = new User();
        IUserServices services = new UserServicesImpl();


        //不可用0，1可用
        String rs="0";
        if("login".equals(opt)){
            if(!"".equals(login_name)&&login_name!=null){
                user.setLogin_name(login_name);
            }
            if(!"".equals(password)&&password!=null){
                user.setPassword(password);
            }
            try{
                boolean flag = services.logion(user);
                if(flag){
                    rs="1";
                }
            }catch (Exception e){
                e.printStackTrace();
            }
            out.print(rs);
        }
    }

    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
       doPost(request,response);
    }
}
